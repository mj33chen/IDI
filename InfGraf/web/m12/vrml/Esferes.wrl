#VRML V2.0 utf8


DEF Entry Viewpoint {
    position 0.0 4.0 30.0
    description "Punt de Vista"
}

NavigationInfo {
    type [ "EXAMINE", "ANY" ]
    headlight TRUE
}
 
Background {
    skyColor [ 0.2 0.2 0.0 ]
}


# Posem esferes

DEF Esferes Transform {
	translation 0.0 0.0 0.0
	children [
		 Transform { 
                        translation 0.0 0.0 0.0
			children Shape {
				appearance Appearance {
					material  Material { diffuseColor 0.2 0.5 1.0 }
				       }
				geometry Sphere { }
                                }
                           }
		 Transform { 
                        translation 3.0 0.0 0.0
			children Shape {
				appearance Appearance {
					material  Material { diffuseColor 1.0 0.5 0.2 }
				       }
				geometry Sphere { }
                                }
                           }
		 Transform { 
                        translation -3.0 0.0 0.0
			children Shape {
				appearance Appearance {
					material  Material { diffuseColor 0.2 1.0 0.5 }
	          			}
				geometry Sphere { }
                                }
                           }
	]
}

#  Més Esferes

Transform {
	translation 0.0 3.0 0.0
	children [ USE Esferes ] 

}

Transform {
	translation 0.0 -3.0 0.0
	children [ USE Esferes ] 

}

